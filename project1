public class HelloVistulaAndDebug {

    public static void main(String[] args) {


        System.out.println("Hello Vistula");


        System.out.println("Starting the debugging part...");


        int number1 = 10;
        int number2 = 20;


        int sum = number1 + number2;
        
        System.out.println("The sum of " + number1 + " and " + number2 + " is: " + sum);


        printMessage();


        System.out.println("Debugging part finished.");
    }

    public static void printMessage() {
        System.out.println("This is a message from the printMessage method.");
    }
}
