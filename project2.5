import java.math.BigDecimal;

public class TaxCalculation {

    public static void main(String[] args) {
        double netPrice = 9.99;
        double vat = 0.23;
        double grossPrice = netPrice * (1 + vat);
        double totalGrossValue = grossPrice * 10000;
        double totalNetValue = totalGrossValue / (1 + vat);

        System.out.println("Gross price for one unit: " + grossPrice);
        System.out.println("Total gross value for 10,000 units: " + totalGrossValue);
        System.out.println("Total net value for 10,000 units: " + totalNetValue);

        BigDecimal netPriceBig = new BigDecimal("9.99");
        BigDecimal vatBig = new BigDecimal("0.23");
        BigDecimal grossPriceBig = netPriceBig.multiply(BigDecimal.ONE.add(vatBig));
        BigDecimal totalGrossValueBig = grossPriceBig.multiply(new BigDecimal("10000"));
        BigDecimal totalNetValueBig = totalGrossValueBig.divide(BigDecimal.ONE.add(vatBig), BigDecimal.ROUND_HALF_UP);

        System.out.println("Gross price for one unit (BigDecimal): " + grossPriceBig);
        System.out.println("Total gross value for 10,000 units (BigDecimal): " + totalGrossValueBig);
        System.out.println("Total net value for 10,000 units (BigDecimal): " + totalNetValueBig);
    }
}
